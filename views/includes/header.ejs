<header>
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet"
        integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/marcosStyle.css'>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"
            onclick="hideLogIn()">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="logo">
            <a class="navbar-brand active" href="/"><img src="/public/images/logo.png" alt=""></a>
            <a class="navbar-brand active" href="/"><img src="/public/images/mobmap.png" alt=""></a>
        </div>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav" style="margin: 0px, 150px, 0, 25px;">
                <li class="nav-item">
                    <a class="nav-link" style="color: #224455;" href="/saibamais"><i class="fa fa-question"
                            id="question" aria-hidden="true"></i>
                        Saiba Mais</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="color: #224455;" href="/mapa"><i class="fa fa-hashtag" id="hashtag"
                            aria-hidden="true"></i>
                        Mapa</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="color: #224455;" href="/enviarProblema"><i class="fa fa-envelope-open"
                            id="envelope" aria-hidden="true"></i>
                        Enviar Problema</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="color: #224455;" href="/ajuda"><i class="fa fa-envelope-open"
                            id="envelope" aria-hidden="true"></i>
                        Ajuda</a>
                </li>

            </ul>
        </div>
        <% if (!session.usuario) { %>
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#entradaModal" id="logIn"
            style="background-color: #4488DD;"><i class="fa fa-sign-in" aria-hidden="true"></i> Entrar</button>
        <% } else { %>
        <a href="/perfil"><button type="button" class="btn btn-primary" id="perfil"
                style="background-color: #4488DD;"><i class="fa fa-sign-in" aria-hidden="true"></i> Perfil</button></a>
        <a href="/login/logout"><button type="button" class="btn btn-danger ml-2" id="logout"><i class="fa fa-sign-out"
                    aria-hidden="true"></i> Logout</button></a>
        <% } %>

    </nav>
    <div class="row">
        <div class="col-5"></div>
    </div>
    <div class="modal fade" id="entradaModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body" style="background-color: rgb(68, 137, 221);">

                    <span class="closeModal" data-dismiss="modal"> x </span>

                    <form action="post">
                        <img src="/public/images/logoWhite.png" alt="">
                        <img src="/public/images/mob_mapWhite.png" alt="">
                        <div class="user">
                            <button type="button" data-toggle="modal" data-target="#registerModal" data-dismiss="modal"
                                style="background-color: white; color: rgb(68, 137, 221); margin-top: 20px;">Criar
                                Conta</button>
                            <button type="button" data-toggle="modal" data-target="#loginModal" data-dismiss="modal"
                                style="border: 1px solid white;"> Login </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">

                    <span class="closeModal closeBlue" data-dismiss="modal"> x </span>

                    <img src="/public/images/logo.png" alt="logo mobmap">
                    <h4>Faça login</h4>

                    <form method="POST" action="/login" id="login">

                        <div class="user">
                            <input type="email" name="email" id="emailLogin" placeholder="E-mail" required="">
                            <input type="password" name="senha" id="password" placeholder="Senha" required="">
                        </div>
                        <div class="custom-control custom-checkbox">
                            <input type="checkbox" class="custom-control-input" name="customCheck1" id="customCheck1">
                            <label class="custom-control-label" for="customCheck1">Manter-me conectado</label>
                            <p></p>
                        </div>
                        <button type="submit">Entrar</button>
                        <button type="button" data-toggle="modal" data-dismiss="modal"
                            data-target="#esqueceuSenhaModal">
                            Esqueceu a senha?
                        </button>
                        <h5>Não tem conta? <button type="button" data-toggle="modal"
                                data-target="#registerModal">Registre-se</button></h5>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="registerModal" tabindex="-1" role="dialog" aria-labelledby="registerModalLabel"
        aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">

                    <span class="closeModal closeBlue" data-dismiss="modal"> x </span>
                    <img src="/public/images/logo.png" alt="logo mobmap">
                    <h4>Cadastrar</h4>

                    <form method="POST" action="/cadastro">

                        <div class="user">
                            <input type="text" name="nome" id="nome" placeholder="Nome" required="">
                            <input type="email" name="email" id="email" placeholder="E-mail" required="">
                            <input type="password" name="senha" id="senha" placeholder="Senha" required="">
                        </div>
                        <button type="submit" >Criar minha conta</button>

                        <label>Ao clicar em "Criar minha conta", concordo com a <a href="privacyPolitics.html">Politica
                                de Privacidade</a> e <a href="termService.html">Termos de Serviço</a></label>

                        <h5>Já tem conta? <button type="button" data-toggle="modal" data-dismiss="modal"
                                data-target="#loginModal">
                                Entrar</button></h5>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="esqueceuSenhaModal" tabindex="-1" role="dialog"
        aria-labelledby="esqueceuSenhaModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-body">

                    <img src="/public/images/logo.png" alt="logo mobmap">
                    <h4>Esqueci a senha</h4>

                    <form action="post">
                        <div class="user"></div>
                        <input type="email" name="email" id="emailEsqueceuSenha" placeholder="E-mail" required="">
                        <button type="submit">Recuperar Senha</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</header>